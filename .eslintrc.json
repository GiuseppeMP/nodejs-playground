{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {},
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx"
            ]
        },
        {
            "files": [
                "*.test.ts",
                "*.spec.ts"
            ],
            "plugins": [
                "jest"
            ],
            "extends": [
                "plugin:jest/recommended"
            ]
        }
    ]
}
